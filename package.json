{
	"name": "nihongo-flashcard",
	"version": "1.1.0",
	"description": "Japanese flashcard",
	"homepage": "https://nihongo-flashcard.codewithshin.com/",
	"repository": {
		"type": "git",
		"url": "https://github.com/shinokada/nihongo-flashcard"
	},
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"threethousand": "node ./scripts/three-thousand.js",
		"tango": "node ./scripts/tango.js",
		"onomatopoeia": "node ./scripts/onomatopoeia.js",
		"verbs": "node ./scripts/verbs.js",
		"adjectives": "node ./scripts/adjectives.js",
		"onek": "node ./scripts/one-thousand-basic-words.js",
		"gairaigo": "node ./scripts/gairaigo.js"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.5",
		"@eslint/compat": "^1.3.1",
		"@eslint/js": "^9.30.0",
		"@playwright/test": "^1.53.1",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/kit": "^2.22.2",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"@svitejs/changesets-changelog-github-compact": "^1.2.0",
		"@tailwindcss/vite": "^4.1.11",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.8",
		"eslint": "^9.30.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.10.1",
		"globals": "^16.2.0",
		"jsdom": "^26.1.0",
		"pdfreader": "^3.0.7",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.13",
		"puppeteer": "^24.11.1",
		"runatics": "^0.1.4",
		"runes-meta-tags": "^0.4.3",
		"runes-webkit": "^0.9.59",
		"svelte": "^5.34.9",
		"svelte-5-ui-lib": "^0.12.6",
		"svelte-check": "^4.2.2",
		"tailwind-merge": "^3.3.1",
		"tailwindcss": "^4.1.11",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.35.0",
		"vite": "^6.3.5",
		"vitest": "^3.2.4"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}
