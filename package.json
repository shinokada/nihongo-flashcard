{
	"name": "nihongo-flashcard",
	"version": "1.1.0",
	"description": "Japanese flashcard",
	"homepage": "https://nihongo-flashcard.codewithshin.com/",
	"repository": {
		"type": "git",
		"url": "https://github.com/shinokada/nihongo-flashcard"
	},
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write 'src/**/*.{js,ts,svelte}'",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"threethousand": "node ./scripts/three-thousand.js",
		"tango": "node ./scripts/tango.js",
		"onomatopoeia": "node ./scripts/onomatopoeia.js",
		"verbs": "node ./scripts/verbs.js",
		"adjectives": "node ./scripts/adjectives.js",
		"onek": "node ./scripts/one-thousand-basic-words.js",
		"gairaigo": "node ./scripts/gairaigo.js"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.1",
		"@playwright/test": "^1.43.1",
		"@sveltejs/adapter-auto": "^3.2.0",
		"@sveltejs/kit": "^2.5.6",
		"@sveltejs/vite-plugin-svelte": "^3.1.0",
		"@svitejs/changesets-changelog-github-compact": "^1.1.0",
		"@types/eslint": "8.56.10",
		"@typescript-eslint/eslint-plugin": "^7.7.0",
		"@typescript-eslint/parser": "^7.7.0",
		"autoprefixer": "^10.4.19",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "2.37.0",
		"pdfreader": "^3.0.2",
		"postcss": "^8.4.38",
		"postcss-load-config": "^5.0.3",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.3",
		"prettier-plugin-tailwindcss": "^0.5.14",
		"puppeteer": "^22.6.5",
		"runatics": "^0.1.3",
		"runes-meta-tags": "^0.2.4",
		"svelte": "5.0.0-next.108",
		"svelte-5-ui-lib": "^0.4.10",
		"svelte-check": "^3.6.9",
		"tailwind-merge": "^2.3.0",
		"tailwindcss": "^3.4.3",
		"tslib": "^2.6.2",
		"typescript": "^5.4.5",
		"vite": "^5.2.9",
		"vitest": "^1.5.0"
	},
	"type": "module"
}
