{
	"name": "nihongo-flashcard",
	"version": "1.1.0",
	"description": "Japanese flashcard",
	"homepage": "https://nihongo-flashcard.codewithshin.com/",
	"repository": {
		"type": "git",
		"url": "https://github.com/shinokada/nihongo-flashcard"
	},
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write 'src/**/*.{js,ts,svelte}'",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"threethousand": "node ./scripts/three-thousand.js",
		"tango": "node ./scripts/tango.js",
		"onomatopoeia": "node ./scripts/onomatopoeia.js",
		"verbs": "node ./scripts/verbs.js",
		"adjectives": "node ./scripts/adjectives.js",
		"onek": "node ./scripts/one-thousand-basic-words.js",
		"gairaigo": "node ./scripts/gairaigo.js"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.7",
		"@playwright/test": "^1.45.3",
		"@sveltejs/adapter-auto": "^3.2.2",
		"@sveltejs/kit": "^2.5.20",
		"@sveltejs/vite-plugin-svelte": "^3.1.1",
		"@svitejs/changesets-changelog-github-compact": "^1.1.0",
		"@types/eslint": "9.6.0",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.8.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "2.43.0",
		"pdfreader": "^3.0.2",
		"postcss": "^8.4.40",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.6",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"puppeteer": "^22.15.0",
		"runatics": "^0.1.3",
		"runes-meta-tags": "^0.3.2",
		"svelte": "5.0.0-next.208",
		"svelte-5-ui-lib": "^0.8.1",
		"svelte-check": "^3.8.5",
		"tailwind-merge": "^2.4.0",
		"tailwindcss": "^3.4.7",
		"tslib": "^2.6.3",
		"typescript": "^5.5.4",
		"vite": "^5.3.5",
		"vitest": "^2.0.5"
	},
	"type": "module"
}
