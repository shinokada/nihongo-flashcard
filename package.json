{
	"name": "nihongo-flashcard",
	"version": "1.2.0",
	"description": "Japanese flashcard",
	"homepage": "https://nihongo-flashcard.codewithshin.com/",
	"repository": {
		"type": "git",
		"url": "https://github.com/shinokada/nihongo-flashcard"
	},
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"threethousand": "node ./scripts/three-thousand.js",
		"tango": "node ./scripts/tango.js",
		"onomatopoeia": "node ./scripts/onomatopoeia.js",
		"verbs": "node ./scripts/verbs.js",
		"adjectives": "node ./scripts/adjectives.js",
		"onek": "node ./scripts/one-thousand-basic-words.js",
		"gairaigo": "node ./scripts/gairaigo.js",
		"ch": "npx changeset",
		"cv": "npx changeset version",
		"cp": "npx changeset publish"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.7",
		"@eslint/compat": "^1.4.1",
		"@eslint/js": "^9.39.0",
		"@playwright/test": "^1.56.1",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.48.4",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@svitejs/changesets-changelog-github-compact": "^1.2.0",
		"@tailwindcss/vite": "^4.1.16",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.2.8",
		"eslint": "^9.39.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.0",
		"flowbite": "^3.1.2",
		"flowbite-svelte": "^1.20.1",
		"globals": "^16.5.0",
		"jsdom": "^27.1.0",
		"pdfreader": "^3.0.7",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"puppeteer": "^24.27.0",
		"runatics": "^0.1.4",
		"runes-meta-tags": "^0.4.5",
		"runes-webkit": "^0.11.4",
		"super-sitemap": "^1.0.5",
		"svelte": "^5.43.2",
		"svelte-check": "^4.3.3",
		"tailwind-merge": "^3.3.1",
		"tailwindcss": "^4.1.16",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.2",
		"vite": "^7.1.12",
		"vitest": "^3.2.4"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}
