{
	"name": "nihongo-flashcard",
	"version": "1.1.0",
	"description": "Japanese flashcard",
	"homepage": "https://nihongo-flashcard.codewithshin.com/",
	"repository": {
		"type": "git",
		"url": "https://github.com/shinokada/nihongo-flashcard"
	},
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write 'src/**/*.{js,ts,svelte}'",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"threethousand": "node ./scripts/three-thousand.js",
		"tango": "node ./scripts/tango.js",
		"onomatopoeia": "node ./scripts/onomatopoeia.js",
		"verbs": "node ./scripts/verbs.js",
		"adjectives": "node ./scripts/adjectives.js",
		"onek": "node ./scripts/one-thousand-basic-words.js",
		"gairaigo": "node ./scripts/gairaigo.js"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.7",
		"@playwright/test": "^1.45.1",
		"@sveltejs/adapter-auto": "^3.2.2",
		"@sveltejs/kit": "^2.5.18",
		"@sveltejs/vite-plugin-svelte": "^3.1.1",
		"@svitejs/changesets-changelog-github-compact": "^1.1.0",
		"@types/eslint": "8.56.10",
		"autoprefixer": "^10.4.19",
		"eslint": "^9.6.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "2.39.0",
		"pdfreader": "^3.0.2",
		"postcss": "^8.4.39",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.5",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"puppeteer": "^22.12.1",
		"runatics": "^0.1.3",
		"runes-meta-tags": "^0.3.2",
		"svelte": "5.0.0-next.175",
		"svelte-5-ui-lib": "^0.4.13",
		"svelte-check": "^3.8.4",
		"tailwind-merge": "^2.3.0",
		"tailwindcss": "^3.4.4",
		"tslib": "^2.6.3",
		"typescript": "^5.5.3",
		"vite": "^5.3.3",
		"vitest": "^1.6.0"
	},
	"type": "module"
}
